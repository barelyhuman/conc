{
  "name": "@barelyreaper/conch",
  "version": "0.0.4",
  "description": "micro library for batch running promises",
  "keywords": [
    "batch promise",
    "promises",
    "concurrency",
    "batch"
  ],
  "homepage": "https://github.com/barelyhuman/conch",
  "bugs": {
    "url": "https://github.com/barelyhuman/conch/issues"
  },
  "repository": "git@github.com:barelyhuman/conch",
  "license": "MIT",
  "author": "Reaper<ahoy@barelyhuman.dev>",
  "main": "dist/index.cjs.js",
  "unpkg": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist/*",
    "public/logo.svg"
  ],
  "scripts": {
    "build": "tsup src/index.js --format cjs,esm --clean --dts --target=node12.22 --minify",
    "dev": "yarn run build -- --watch",
    "fix": "prettier --write .",
    "prepare": "npm run build",
    "prepublishOnly": "rm -rf dist; npm run build; npm run size;",
    "size": "sizesnap",
    "test": "uvu -r esm tests"
  },
  "devDependencies": {
    "@barelyhuman/prettier-config": "^0.1.0",
    "esm": "^3.2.25",
    "prettier": "^2.5.1",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5",
    "uvu": "^0.5.3"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
